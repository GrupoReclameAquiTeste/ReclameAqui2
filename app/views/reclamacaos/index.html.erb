<p id="notice"><%= notice %></p>

<h1>Reclamacaos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Categoria problema</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reclamacaos.each do |reclamacao| %>
      <tr>
        <td><%= reclamacao.titulo %></td>
        <td><%= reclamacao.texto %></td>
        <td><%= reclamacao.categoria_problema %></td>
        <td><%= reclamacao.empresa %></td>
        <td><%= link_to 'Ver reclamação', reclamacao %></td>
        <td><%= link_to 'Editar', edit_reclamacao_path(reclamacao), id:'editar' %></td>
        <% if (logged_in? and reclamacao.usuario_id == current_user.id) %>
          <td><%= link_to 'Deletar', reclamacao, method: :delete, id:'deletar' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Fazer nova reclamação', new_reclamacao_path %> |
